mixin imageWall(title)
  section.imageWall
    h2.imageWall__title= title
    form.imageWall__actions(name="actions")
      div.imageWall__category
        input.imageWall__category--input#category__all(type="radio" name="category" value="" checked)
        label.imageWall__category--label(for="category__all") 全部
        input.imageWall__category--input#category__meme(type="radio" name="category" value="0")
        label.imageWall__category--label(for="category__meme") 迷因
        input.imageWall__category--input#category__elderly(type="radio" name="category" value="1")
        label.imageWall__category--label(for="category__elderly") 長輩圖
      div.imageWall__arrange
        input.imageWall__arrange--input#arrange__grid(type="radio" name="arrange" value="grid" checked)
        label.imageWall__arrange--label(for="arrange__grid")
          div.imageWall__arrange--icon.arrange__icon--grid
        input.imageWall__arrange--input#arrange__waterfall(type="radio" name="arrange" value="waterfall")
        label.imageWall__arrange--label(for="arrange__waterfall")
          div.imageWall__arrange--icon.arrange__icon--waterfall
    div.imageWall__rows.imageWall--grid
      div.imageWall__row
      div.imageWall__row
      div.imageWall__row
    div.imageWall__bottom

