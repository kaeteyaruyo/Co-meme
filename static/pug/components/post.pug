include icon.pug
include share.pug

div.post
  a.post__image(href=`/image/${ imageId }`)
    img(src=`data:image/png;base64, ${ content }`)
  div.post__info
    div.post__author
      a(href=`/profile/${ author.userId }`)
        +icon('post__author--icon', author.icon, 36)
      div.post__author--text
        a.post__author--name(href=`/profile/${ author.userId }`)= author.username
        p.post__author--timestamp= createdAt
    div.post__action
      button.post__action--button.post__action--like(id=`post__like--${ imageId }` onclick=`sendLike(this, ${ imageId })`)
        div.post__action--icon.post__like--icon
        p.post__action--label.post__like--label= likedUsers.length
      button.post__action--button.post__action--share(onclick=`openShareDialog(${ imageId })`)
        div.post__action--icon.post__share--icon
        p.post__action--label.post__share--label 分享
