doctype html
html
  head
    meta(charset="utf8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
    title= title + " - Co meme"
    link(href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100;300;400;500;700;900&display=swap" rel="stylesheet")
    link(rel="stylesheet" type="text/css" href="/css/mobile/reset.css")
    link(rel="stylesheet" type="text/css" href="/css/common/button.css")
    block stylesheets
  body
    header.header
      a.header__logo(href="/")
        img(src="/img/common/logo.svg" width="105" height="25")
    main.main
      div.main__filler
      block main
      nav.nav
        if activeUser
          a.nav__link.nav__link--home(href="/")
            div.nav__link--icon.nav__link--homeIcon
            span.nav__link--label 首頁
          a.nav__link.nav__link--recommend(href="/recommend")
            div.nav__link--icon.nav__link--recommendIcon
            span.nav__link--label 為你推薦
          a.nav__upload(href="/upload") +
          a.nav__link.nav__link--latest(href="/latest")
            div.nav__link--icon.nav__link--latestIcon
            span.nav__link--label 最新內容
          a.nav__link.nav__link--profile(href=`/profile/${ activeUser.id }`)
            div.nav__link--icon.nav__link--profileIcon
            span.nav__link--label 個人資料
            span#activeUser__id(style="display: none;")= activeUser.id
        else
          a.button--hollow(href="/signup") 加入我們
          a.button--solid(href="/signin") 會員登入
      script(src="/bundle/mobile/navigation.bundle.js")
      block scripts
